<resources>
    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/outer_space</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.BottomNavigationView" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/eerie_black</item>
    </style>

    <style name="MyTheme.FloatingActionButton" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:backgroundTint">@color/onyx</item>
    </style>

</resources>