<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/auro_metal_saurus</item>
        <item name="colorPrimaryVariant">@color/dark_liver</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyTheme.BottomNavigationView" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/silver</item>
    </style>

    <style name="MyTheme.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/dark_liver</item>
    </style>

    <style name="PoserLeftCornerCut" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/item_container_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/item_container_radius</item>
    </style>

</resources>
